<h1 class="title">все посты</h1>
<div class="posts">
    {{#each posts}}
        <div class="horarticle">
            <a href="/article/{{this.id}}">
            <img class="imghorarticle" src={{this.img}} alt="">
                <div class="texthorarticle">
                    <h1 class="">{{this.title}}</h1>
                    <p class="article_text">{{this.maintext}}</p>
                    <a href="/edit/{{this.id}}">Edit</a>|
                    <form action="delete/{{this.id}}" method="POST" style="display:inline;">
                        <input type="submit" value="Delete" />
                    </form>
                </div>
            </a>
        </div>
    {{/each}}
</div>